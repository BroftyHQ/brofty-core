generator client {
  provider = "prisma-client-js"
  output   = "../prisma-client"
}

generator electron_client {
  provider = "prisma-client-js"
  output   = "../electron/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String @id @default(cuid())
  content   String
  createdAt BigInt
  updatedAt BigInt
  user      String
  by        String

  @@index([user], name: "idx_user")
}

model LongTermUserMemory {
  id        String @id @default(cuid())
  content   String
  createdAt BigInt
  updatedAt BigInt
  user      String

  @@index([user], name: "idx_user_global_memory")
}
