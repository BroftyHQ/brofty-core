{
  "name": "brofty-core",
  "version": "0.0.2",
  "description": "Brofty core server",
  "main": "electron/app.js",
  "scripts": {
    "clean": "rimraf electron/server",
    "dev-static": "yarn tsx src/index.ts",
    "dev-prod": "cross-env NODE_ENV=production yarn tsx watch src/index.ts",
    "app:dev": "electron electron/app.js",
    "app:build-win": "tsx src/electron-build/win.ts",
    "app:build-linux": "tsx src/electron-build/linux.ts",
    "app:build-mac": "tsx src/electron-build/mac.ts",
    "app:build-dir": "electron-builder --dir",
    "tsx:start": "cross-env NODE_ENV=production tsx ./electron/server/index.js",
    "pm2:stop": "pm2 stop brofty-core",
    "pm2:restart": "pm2 restart brofty-core",
    "pm2:delete": "pm2 delete brofty-core",
    "pm2:logs": "pm2 logs brofty-core",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "compile": "tsc --outDir electron/server ",
    "dev": "docker -v && yarn tsx watch src/index.ts",
    "start": "docker -v && pm2 start ecosystem.config.cjs --env production --name brofty-core -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BroftyHQ/brofty-core.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/BroftyHQ/brofty-core/issues"
  },
  "homepage": "https://github.com/BroftyHQ/brofty-core#readme",
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@as-integrations/express5": "^1.1.0",
    "@graphql-tools/schema": "^10.0.23",
    "@modelcontextprotocol/sdk": "^1.13.1",
    "@qdrant/js-client-rest": "^1.14.1",
    "cors": "^2.8.5",
    "cron": "^4.3.1",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-upload": "^17.0.0",
    "graphql-ws": "^6.0.5",
    "luxon": "^3.6.1",
    "mathjs": "^14.5.2",
    "nanoid": "^5.1.5",
    "node-llama-cpp": "^3.10.0",
    "openai": "^5.6.0",
    "pm2": "^6.0.8",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "systeminformation": "^5.27.6",
    "tsx": "^4.20.3",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/graphql-upload": "^17.0.0",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.0.3",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
